@page "/"

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">Welcome to your new app with MudBlazor!</MudText>
    
    <MudPaper Class="pa-4" Elevation="2">
        <MudText Typo="Typo.h6" GutterBottom="true">MudBlazor Components Demo</MudText>
        
        <MudGrid>
            <MudItem xs="12" sm="6">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" FullWidth="true">
                    Primary Button
                </MudButton>
            </MudItem>
            <MudItem xs="12" sm="6">
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Size="Size.Large" FullWidth="true">
                    Secondary Button
                </MudButton>
            </MudItem>
        </MudGrid>
        
        <MudDivider Class="my-4" />
        
        <MudTextField @bind-Value="@textValue" Label="Enter some text" Variant="Variant.Outlined" />
        
        <MudAlert Severity="Severity.Info" Class="mt-4">
            This is a sample MudBlazor application. The components are working correctly!
        </MudAlert>
    </MudPaper>
</MudContainer>

@code {
    private string textValue = "";
}
